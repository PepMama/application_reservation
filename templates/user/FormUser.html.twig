{% extends 'base.html.twig' %}

{% block title %}Réserver un service{% endblock %}



{% block content %}
    <div class="container card mt-5 mb-5">
        <h1 class="mb-4 mt-4">Entrez vos informations pour réserver</h1>

        <p>Vous avez choisi le créneau : {{ startTime|date('H:i') }} - {{ endTime|date('H:i') }}</p>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="mb-3">
            {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lastName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.age, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.age) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phoneNumber) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div style="display: flex">
            <div>
                <button type="submit" class="btn btn-success mb-4">Réserver</button>
            </div>
            <div>
                <a href="{{ path('service_show', { id: service.id }) }}" class="btn btn-secondary">Retour aux créneaux disponibles</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
