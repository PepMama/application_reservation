{% extends 'base.html.twig' %}

{% block title %}BookNow{% endblock %}

{% block content %}

    <div class="container text-center mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="display-4 text-primary">Bienvenue sur BookNow !</h1>
                <h2 class="lead text-secondary">Réserver en toute simplicité. </h2>
                <p class="mt-3 mb-4">
                    Choisissez un service, vérifiez les disponibilités, et réservez en un clic✅!
                </p>
                <a href="#list_services" class="btn btn-primary btn-lg">Accéder à la liste des services</a>
            </div>
        </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#0D6EFD" fill-opacity="1" d="M0,128L48,117.3C96,107,192,85,288,117.3C384,149,480,235,576,240C672,245,768,171,864,160C960,149,1056,203,1152,224C1248,245,1344,235,1392,229.3L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#0D6EFD" fill-opacity="1" d="M0,128L48,117.3C96,107,192,85,288,117.3C384,149,480,235,576,240C672,245,768,171,864,160C960,149,1056,203,1152,224C1248,245,1344,235,1392,229.3L1440,224L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>

    <div class="container text-center ">
        <h3 id="list_services" class="display-6 text-primary">Découvrez nos services</h3>
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between mb-4">
            {% for services in services %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ services.name }}</h5>
                        <p class="card-text">{{ services.description }}</p>
                        <p class="card-text">Prix : {{ services.price }}€</p>
                        <a href="{{ path('service_show', { id: services.id }) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
